<div class="container" style="margin-top: 90px">
  <div class="row">
    <article class="span12 list6-box padTop">
      <div class="holder">
        <h3 style="font-size: 18px">
          <i class="icon icon-search"></i>
          <%= t("search.showing") %>
          <%= @result.count + @result2.count + @result3.count + @result4.count + @result5.count + @result6.count %>
          <%= t("search.results_for") %>

          "
          <%= @word %>
          "
        </h3>

        <br>
        <br>
        <br>
        <hr>
      </div>
    </article>
  </div>
  <div class="row">

    <div class="col-md-12 pagination-centered">
      <% @result.each do |x| %>
          <%= render "projects/project" , :x => x %>
      <% end %>
    </div>

    <div class="col-md-12 pagination-centered">
      <% @result2.each do |x| %>
          <%= render "news/news" , :x => x %>
      <% end %>
    </div>

    <div class="col-md-12 pagination-centered">
      <% @result4.each do |x| %>
          <%= render "onshore_yards/asset" , :x => x %>
      <% end %>
    </div>

    <div class="col-md-12 pagination-centered">
      <% @result5.each do |x| %>
          <%= render "offshore_facilities/asset" , :x => x %>
      <% end %>
    </div>


    <div class="col-md-12 pagination-centered">
      <% @result6.each do |x| %>
          <% x.construction_equipments.each do |c| %>
              <%= render "construction_equipments/asset" , :x => c %>
          <% end %>
      <% end %>
    </div>

    <div class="col-md-12 pagination-centered">
      <% @result3.each do |x| %>
          <%= render "construction_equipments/asset" , :x => x %>
      <% end %>
    </div>

  </div>

  <div class="col-md-12 pagination-centered">
    <% if @result.count + @result2.count + @result3.count + @result4.count + @result5.count + @result6.count== 0 %>
        <p>
          <%= t("search.no_results") %>
        </p>
    <% end %>
    <div class="holder">
      <br>
      <hr>
    </div>
  </div>
</div>


<script type="text/javascript">
    $(".proj").owlCarousel({
        autoPlay : 6000,
        stopOnHover : true,
        navigation:false,
        paginationSpeed : 1000,
        goToFirstSpeed : 2000,
        singleItem : true,
        autoHeight : false
    });
</script>