
<div class="container" style="margin-top: 90px">
  <div class="row">
    <article class="span12 list6-box padTop">
      <div class="holder">
        <h3 style="font-size: 18px">
          <i class="icon icon-search"></i>
          <%= t("search.showing") %>
          <%= @result.count + @result2.count %>
          <%= t("search.results_for") %>

          "
          <%= @word %>
          "
        </h3>

        <br>

        <br>
        <br>
        <hr>
      </div>
    </article>
  </div>
  <div class="row pagination-centered">
    <% @result.each do |x| %>
        <%= render "projects/project" , :x => x %>
    <% end %>
  </div>
  <div class="row pagination-centered">
    <% @result2.each do |x| %>
        <%= render "news/news" , :x => x %>
    <% end %>
  </div>

  <div class="row pagination-centered">
    <% if @result.count + @result2.count == 0 %>
    <p>
      <%= t("search.no_results") %>
    </p>
        <% end %>
    <div class="holder">
      <br>
      <hr>
    </div>
  </div>
</div>


<script type="text/javascript">
    $(".proj").owlCarousel({
        autoPlay : 6000,
        stopOnHover : true,
        navigation:false,
        paginationSpeed : 1000,
        goToFirstSpeed : 2000,
        singleItem : true,
        autoHeight : false
    });
</script>