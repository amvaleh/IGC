<div class="row">

  <div class="col-md-12">

    <div class="panel panel-default">
      <div class="panel-heading">
        <h3>Listing Projects</h3>
        <%= link_to 'New Project', new_project_path , :class => "pull-right btn btn-default" %>

      </div>
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover">
            <thead>
              <tr>
                <th>Title</th>
                <th>Client name</th>
                <th>Location</th>
                <th>Status</th>
                <th>Type</th>
                <th colspan="4"></th>
              </tr>
            </thead>
            <tbody>
              <% @projects.each do |project| %>
              <tr>
                <td><%= project.title %></td>
                <td><%= project.client_name %></td>
                <td>
                  <%= project.location %>
                  <% if project.is_abroad %>
                  <span class="text-muted"> (abroad)</span>
                  <% end %>
                </td>
                <td><%= get_status(project) %></td>
                <td><%= project.project_type %></td>

                <td><%= link_to 'Show', project , class: "btn btn-info" %></td>
                <td><%= link_to 'web view', appshow_project_path(project) , class: "btn btn-default btn-sm" %></td>
                <td><%= link_to 'Edit', edit_project_path(project) , class: "btn btn-warning btn-sm" %></td>
                <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger btn-sm" %></td>
              </tr>
              <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

  <%= paginate @projects  %>


</div>


<br>

</div>
