<div class="col-md-12">
  <div class="row">
    <div class="panel panel-default">
      <div class="panel-heading">
        <h3>Listing Projects</h3>
        <%= link_to 'New Project', new_project_path , :class => "pull-right btn btn-default" %>

      </div>
      <div class="panel-body">
        <div class="table-responsive">
          <table class="table table-striped table-bordered table-hover">
            <thead>
            <tr>
              <th>Title</th>
              <th>Client name</th>
              <th>Start date</th>
              <th>Contract type</th>
              <th>Location</th>
              <th>Duration</th>
              <th>Design capacity</th>
              <th>Construction man hour</th>
              <th>Avatars</th>
              <th colspan="3"></th>
            </tr>
            </thead>
            <tbody>
            <% @projects.each do |project| %>
                <tr>
                  <td><%= project.title %></td>
                  <td><%= project.client_name %></td>
                  <td><%= project.start_date %></td>
                  <td><%= project.contract_type %></td>
                  <td><%= project.location %></td>
                  <td><%= project.duration %></td>
                  <td><%= project.design_capacity %></td>
                  <td><%= project.construction_man_hour %></td>
                  <td><%= project.avatars.count %></td>
                  <td><%= link_to 'Show', project , class: "btn btn-info" %></td>
                  <td><%= link_to 'Edit', edit_project_path(project) , class: "btn btn-warning" %></td>
                  <td><%= link_to 'Destroy', project, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %></td>
                </tr>
            <% end %>
            </tbody>
          </table>
        </div>
      </div>
    </div>
  </div>

</div>


<br>

