<article class="span3 box4">
  <div class="thumb-pad8 maxheight2" >
    <div class="box_inner">
      <div class="thumbnail">
        <figure>
          <div id="owl-project" name="project" class="proj owl-carousel owl-theme" >
            <% x.avatars.first(4).each do |a| %>
                <div class="item">
                  <div class="eqsize" style="background-image:url(<%= image_path a.url(:medium) %>);"></div>
                </div>
            <% end  %>
          </div>
        </figure>
        <%= link_to appshow_project_path(x) do %>

            <div class="caption" <% if x.avatars.count==1 %> style="    margin-top: 35px;" <%end%> >
              <div class="icon">
                <%= image_tag "icon2.png" %>
              </div>
              <br>
              <p style="    min-height: 35px;">
              <%= truncate(x.title , :length => 30)%>
              </p>
              <hr class="hr">
              <p>
                <i class="icon-user"></i>
                <%= truncate(x.client_name , :length => 15)%>
              </p>
              <p>
                <i class="icon-map-marker"></i>
                <%= truncate(x.location , :length => 15)%>
              </p>
              <p>
                <% case x.status %>
                <% when true %>
                    <i class="icon-play"></i>
                <% when false %>
                    <i class="icon-check"></i>
                <% end %>
                <%= get_status(x) %>
              </p>
        <% end %>
        </div>
      </div>
    </div></div>
</article>