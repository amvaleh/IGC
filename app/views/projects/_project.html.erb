<article class="span3 box4">
  <div class="thumb-pad8 maxheight2" style="height: 574px;">
    <div class="box_inner">
      <div class="thumbnail">
        <figure>
          <div id="owl-project" name="project" class="proj owl-carousel owl-theme">
            <% x.avatars.each do |a| %>
                <div class="item">
                  <div class="eqsize" style="background-image:url(<%= image_path a.url(:medium) %>);"></div>
                </div>
            <% end  %>
          </div>
        </figure>
        <%= link_to appshow_project_path(x) do %>

            <div class="caption">
              <div class="icon">
                <%= image_tag "icon2.png" %>
              </div>
              <p style="    height: 60px !important;">
              <%= x.title %>
              </p>
              <hr class="hr">
              <p>
                <i class="icon-user"></i>
                <%= x.client_name %>
              </p>
              <p>
                <i class="icon-map-marker"></i>
                <%= x.location %>
              </p>
              <p>
                <% case x.status %>
                <% when true %>
                    <i class="icon-play"></i>
                <% when false %>
                    <i class="icon-check"></i>
                <% end %>
                <%= get_status(x) %>
              </p>
        <% end %>

        </div>
      </div>
    </div></div>
</article>