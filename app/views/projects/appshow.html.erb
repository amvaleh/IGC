<div class="container" style="margin-top: 90px">
  <div class="row">
    <article class="span12 list6-box padTop">
      <div class="holder">
        <i class="icon icon-bookmark icon-2x pull-right"></i>
        <h2>
          <%= @project.title %>
        </h2>
        <br>
        <hr>
      </div>

    </article>
  </div>
  <div class="row">
    <section class="example">
      <div id="example2" class="accordion-slider">
        <div class="as-panels">
          <% @project.avatars.each do |a| %>

              <div class="as-panel">

                <%= image_tag a.url(:medium) , :class => "as-background" %>
                <%= link_to a.url do %>
                    <%= image_tag a.url() , :class => "as-background-opened" %>
                <% end %>
              </div>

          <% end %>

        </div>
      </div>
    </section>
    <br><br>
  </div>

  <div class="row" style="text-align: center">
    <article class="span12 list6-box padTop">
      <div class="holder">
        <h6 style="    font-size: 18px;">
            <%= t("projects.specifications") %>
        </h6>
      </div>
    </article>
    <br>
    <hr>
    <article class="banner-holder">
      <div class="span2 thumb-pad-bann maxheight " style="height: 346px;"><div class="box_inner">
        <figure>
          <%= image_tag "contract.png", :width => "40%" %>
          <br>          <br>
          <span>
            <%= t("projects.contract_type") %>
          </span>
        </figure>
        <p>
        </p>
        <p>
          <!--<small>contract type:</small> -->
          <a> <%= @project.contract_type %> </a>
        </p>
      </div></div>
      <div class="span2 thumb-pad-bann maxheight" style="height: 346px;"><div class="box_inner">
        <figure>
          <%= image_tag "map.png", :width => "40%" %>
          <br>          <br>
          <span>
            <%= t("projects.locatoin") %>
          </span>
        </figure>
        </figure>
        <a href="#">
          <%= @project.location %>
        </a>
      </div></div>
      <div class="span2 thumb-pad-bann maxheight" style="height: 346px;"><div class="box_inner">
        <figure>
          <%= image_tag "duration.png", :width => "40%" %>
          <br>          <br>
          <span>
                        <%= t("projects.duration") %>
          </span>
        </figure>
        <p>
          <!--<small>contract type:</small> -->
          <a>            '<%= @project.duration %>' month
          </a>
        </p>
      </div></div>
      <div class="span2 thumb-pad-bann maxheight" style="height: 346px;"><div class="box_inner">
        <figure>
          <%= image_tag "capacity.png", :width => "40%" %>
          <br>          <br>
          <span>
            <%= t("projects.design_capacity") %>
          </span>
        </figure>
        <a href="#">
          <%= @project.design_capacity %>
        </a>
      </div></div>
      <div class="span2 thumb-pad-bann maxheight" style="height: 346px;"><div class="box_inner">
        <figure>
          <%= image_tag "manhour.png", :width => "40%" %>
          <br>          <br>
          <span>
            <%= t("projects.constr_man_hour") %>
          </span>
        </figure>
        <a href="#">
          <%= @project.construction_man_hour %>
          <%= t("projects.man_hour") %>
        </a>
      </div></div>
      <div class="span2 thumb-pad-bann maxheight" style="height: 346px;"><div class="box_inner">
        <figure>
          <%= image_tag "date.png", :width => "40%" %>
          <br>          <br>
          <span>
            <%= t("projects.start_date") %>
          </span>
        </figure>
        <a> <%= @project.start_date %>
        </a>
      </div></div>
    </article>
    <br>
    <br>
    <br>
  </div>

  <% if @project.news.present? %>
      <div class="row" style="text-align: center">
        <article class="span12 list6-box padTop">
          <div class="holder">
            <h6 style="    font-size: 18px;">
            <%= t("projects.news_related") %>
            </h6>
          </div>
        </article>
        <br>
        <br>
        <hr>
        </div>
      <div class="row">
        <ul class="list6">
          <% count=0 %>
          <% @project.news.order(:created_at).each do |news| %>
              <% count = count + 1 %>
          .<li>
          <div class="thumb-pad5">
            <div class="thumbnail">
              <figure>
                <% if news.avatars.first.present? %>
                    <%= image_tag news.avatars.first.url(:medium) %>
                <% else %>
                    <%= image_tag "news.png" , :width => "20%"  %>
                <% end %>
              </figure>
              <div class="caption">
                <time datetime="2013-01-01" class="">
                  <small>
                    posted on:
                  </small>
                  <%= news.created_at %>
                </time>
                <br>

                <a href="#" class="lnk">
                  <%= count  %> )  <%= news.title %>
                </a>
                <p>
                  <%= news.caption %>
                </p>
                <%= link_to t("news.read_more ") , appshow_news_path(news) , :class => "btn btn-primary btn1" %>
              </div>
            </div>
          </div>
        </li>
          <% end %>
        </ul>
        </div>
        <div class="row" style="text-align: center">
        <br>
        <hr>
          <br>
      </div>
  <% end %>

  </div>
</div>

