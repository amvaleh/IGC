
<section class="banner-box">
  <div class="container">
    <div class="row">
      <article class="span6 well offset3">
        <h4 class="text-center">
          Log in as IGC admin:
        </h4>

        <%= simple_form_for(resource, as: resource_name, url: session_path(resource_name),class:"form-horizontal" ) do |f| %>
            <div class="form-inputs">
              <%= f.input :email, required: false, autofocus: true  , :label_html => { :class => 'label-control' }%>
              <%= f.input :password, required: false %>
              <%= f.input :remember_me, as: :boolean if devise_mapping.rememberable? %>
            </div>

            <div class="control-group text-center">
              <%= f.button :submit, "Log in" , :class => "btn btn-large btn-inverse" %>
            </div>
        <% end %>

        <%#= render "devise/shared/links" %>

      </article>
    </div>
  </div>
</section>