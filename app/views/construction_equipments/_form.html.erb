<div class="col-md-12 well">
  <%= simple_form_for(@construction_equipment) do |f| %>
      <%= f.error_notification %>

      <div class="form-inputs">
        <%= f.input :construction_equipment_category_id , :collection => ConstructionEquipmentCategory.all ,:label => "Catrgory" , :value_method=> :id  ,:include_blank => false %>
        <%= f.input :production_date %>
        <%= f.input :quantity %>
        <%= f.input :Description %>
      </div>

      <div class="form-actions">
        <%= f.button :submit %>
      </div>
  <% end %>
</div>
