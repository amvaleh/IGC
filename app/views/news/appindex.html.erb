<div class="container" style="margin-top: 90px">
  <div class="row">
    <article class="span12 list6-box padTop">
      <div class="holder">
        <h2>
          <%= t("news.title") %>
        </h2>
        <br>
        <hr>
      </div>
      <ul class="list6">
        <% @news.order("publish_date DESC").each do |news| %>
            <% if news.published == true %>
                <li>
                  <div class="thumb-pad5">
                    <div class="thumbnail">
                      <figure>
                        <%= link_to appshow_news_path(news) do %>
                            <% if news.avatars.first.present? %>
                                <%= image_tag news.avatars.first.url(:medium) %>
                            <% else %>
                                <%= image_tag "news.png" , :class => "mywidth"  %>
                            <% end %>
                        <% end %>
                      </figure>
                      <div class="caption">
                        <time datetime="2013-01-01">
                          <%= news.publish_date %>
                        </time>
                        <br>
                        <%= link_to appshow_news_path(news) , :class => "lnk" do %>
                            <%= news.title %>
                        <% end %>
                        <p>
                          <%= news.caption %>
                        </p>

                        <%= link_to t("news.read_more ") , appshow_news_path(news) , :class => "btn btn-primary btn1" %>
                        <br>                        <br>

                        <p>
                          <% if news.project_id.present?%>
                              <%= link_to appshow_project_path(news.project_id), :class => "" do %>
                                  <%= news.project.title %>
                              <% end %>
                          <% end %>
                        </p>
                      </div>
                    </div>
                  </div>
                </li>
            <% end %>
        <% end %>

      </ul>

      <div class="list6 " style="text-align: center">
        <%= paginate @news %>
      </div>
    </article>
  </div>
</div>



