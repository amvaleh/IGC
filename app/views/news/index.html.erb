<div class="col-md-12">

  <div class="panel panel-default">
    <div class="panel-heading">
      <h3>
        Listing NEWS
      </h3>
      <%= link_to 'New ', new_news_path, :class => "pull-right btn btn-default" %>

    </div>
    <div class="panel-body">
      <div class="table-responsive">
        <table class="table table-striped table-bordered table-hover">
          <thead>
          <tr>
            <th>Project</th>
            <th>Title</th>
            <th>Avatars</th>
            <th>Caption</th>
            <th colspan="4"></th>
          </tr>
          </thead>
          <tbody>
          <% @news.each do |news| %>
              <tr>
                <td><%if news.project.present?%><%= news.project.title %>
                  <%else%>
                  <small class="text-muted">free news</small><% end %></td>
                <td><%= news.title %></td>
                <td><%= news.avatars.length %></td>
                <td><%= truncate(news.caption , :length=> 100)%></td>
                <td><%= link_to 'Show', news , class: "btn btn-info" %></td>
                <td><%= link_to 'web view', appshow_news_path(news) , class: "btn btn-default" %></td>
                <td><%= link_to 'Edit', edit_news_path(news) , class: "btn btn-warning" %></td>
                <td><%= link_to 'Delete', news, method: :delete, data: { confirm: 'Are you sure?' }, class: "btn btn-sm btn-danger" %> </td>
              </tr>
          <% end %>
          </tbody>
        </table>
      </div>
    </div>
  </div>



  <%= paginate @news  %>


</div>


<br>

