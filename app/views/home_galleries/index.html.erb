

<div class="row">
  <div class="row">
    <div class="col-md-12">
      <div class="row">
        <div class="panel panel-default">
          <div class="panel-heading">
            <h3>Listing Home Galleries</h3>
            <%= link_to 'New Home gallery', new_home_gallery_path , :class => "pull-right btn btn-default"  %>

          </div>
          <div class="panel-body">
            <div class="table-responsive">
              <table class="table table-striped table-bordered table-hover">
                <thead>
                <tr>
                  <th>Avatars</th>
                  <th colspan="3"></th>
                </tr>
                </thead>
                <tbody>
                <% @home_galleries.each do |home_gallery| %>
                    <tr>
                      <td><%= home_gallery.avatars.count %></td>
                      <td><%= link_to 'Show', home_gallery %></td>
                      <td><%= link_to 'Edit', edit_home_gallery_path(home_gallery) %></td>
                      <td><%= link_to 'Destroy', home_gallery, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                    </tr>
                <% end %>
                </tbody>
              </table>
            </div>
          </div>
        </div>
      </div>

      <%= paginate @home_galleries  %>
    </div>
    <br>

  </div>

</div>