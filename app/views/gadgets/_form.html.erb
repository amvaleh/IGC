<div class="col-md-12">
  <div class="panel panel-default">
    <div class="panel-heading">
      <h3>
        complete the form
      </h3>
    </div>
    <div class="panel-body">
      <%= form_for(@gadget,:html => {role: "form"} ) do |f| %>
          <% if @gadget.errors.any? %>
              <div id="error_explanation">
                <h2><%= pluralize(@gadget.errors.count, "error") %> prohibited this news from being saved:</h2>

                <ul>
                  <% @gadget.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                  <% end %>
                </ul>
              </div>
          <% end %>

          <div class="form-group">
            <%= f.label :name %><br>
            <%= f.text_area :name ,:class=>"form-control"%>
          </div>
          <div class="form-group">
            <%= f.label :arabic_name %><br>
            <%= f.text_area :arabic_name ,:class=>"form-control"%>
          </div>
          <div class="form-group">
            <%= f.label :avatars %><br>
            <%#= f.text_field :avatars %>
            <%= f.file_field :avatars, multiple: true ,:class=>"form-control"%>
          </div>
          <div class="form-group">
            <%= f.label :caption %><br>
            <%= f.text_area :caption,:class=>"form-control" %>
          </div>
          <div class="actions">
            <%= f.submit "submit" , :class => "btn btn-default pull-right" %>
            <%= link_to 'Back', news_index_path , class: "btn btn-warning " %>

          </div>
      <% end %>
    </div>
  </div>


</div>
