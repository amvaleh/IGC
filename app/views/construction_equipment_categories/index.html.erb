<div class="row">
  <div class="col-md-12">
    <div class="row">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3>Listing Construction Equipment Categories</h3>
          <%= link_to 'New Construction equipment category', new_construction_equipment_category_path, :class => "pull-right btn btn-danger"  %>
        </div>
        <div class="panel-body">
          <div class="table-responsive">
            <table class="table table-striped table-bordered table-hover">

              <thead>
              <tr>
                <th>Name</th>
                <th colspan="3"></th>
              </tr>
              </thead>

              <tbody>
              <% @construction_equipment_categories.each do |construction_equipment_category| %>
                  <tr>
                    <td><%= construction_equipment_category.name %></td>
                    <td><%= link_to 'Show', construction_equipment_category %></td>
                    <td><%= link_to 'Edit', edit_construction_equipment_category_path(construction_equipment_category) %></td>
                    <td><%= link_to 'Destroy', construction_equipment_category, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
              <% end %>
              </tbody>
            </table>

            <br>

          </div>
        </div>
      </div>
    </div>
  </div>
</div>

