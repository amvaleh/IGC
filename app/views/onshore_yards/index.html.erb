
<div class="row">
  <div class="col-md-12">
    <div class="row">
      <div class="panel panel-default">
        <div class="panel-heading">
          <h3>Listing onshore yards</h3>
          <%= link_to 'New Onshore yard', new_onshore_yard_path , :class => "pull-right btn btn-default"  %>

        </div>
        <div class="panel-body">
          <div class="table-responsive">


            <table class="table table-striped table-bordered table-hover">
              <thead>
              <tr>
                <th>Description</th>
                <th>Location</th>
                <th>Area</th>
                <th>Remark</th>
                <th colspan="3"></th>
              </tr>
              </thead>

              <tbody>
              <% @onshore_yards.each do |onshore_yard| %>
                  <tr>
                    <td><%= onshore_yard.description %></td>
                    <td><%= onshore_yard.location %></td>
                    <td><%= onshore_yard.area %></td>
                    <td><%= onshore_yard.remark %></td>
                    <td><%= link_to 'Show', onshore_yard %></td>
                    <td><%= link_to 'Edit', edit_onshore_yard_path(onshore_yard) %></td>
                    <td><%= link_to 'Destroy', onshore_yard, method: :delete, data: { confirm: 'Are you sure?' } %></td>
                  </tr>
              <% end %>
              </tbody>
            </table>

            <br>
          </div></div></div>
    </div>
  </div>
</div>


